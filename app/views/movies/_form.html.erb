<%= simple_form_for @movie do |movie| %>
  <%= movie.input :title %>
  <%= movie.input :year, as: :numeric %>
  <%= movie.input :duration, as: :numeric %>
  <%= movie.input :location %>
  <%= movie.input :synopsis, as: :text, :input_html => { :rows => 3 } %>
  <%= movie.input :genre, as: :check_boxes, collection: ['Comedy',
                                                    'Fiction',
                                                    'Documentary',
                                                    'Action',
                                                    'Drama',
                                                    'Thriller',
                                                    'Biography',
                                                    'Kids',
                                                    'Adventure',
                                                    'Horror',
                                                    'Fantasy',
                                                    'Musical'], include_hidden: false %>
  <%= movie.input :poster, as: :file %>
  <%= movie.submit "Confirm", class: "btn btn-primary" %>
<% end %>
