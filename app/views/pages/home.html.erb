<div class="banner" style="background-image: linear-gradient(to right,#000 0,rgba(0,0,0,0) 100%),linear-gradient(to top,#000 0,rgba(0,0,0,0) 80%), url(https://cdn-images.rtp.pt/EPG/imagens/41116_63032_54903.jpg);">
  <div class="container">
    <h1>Find Movies from Northeast Brazil</h1>
    <p>Type a city in the region...</p>
    <%= link_to "See all Movies", "/movies", class: "btn btn-primary" %>
  </div>
</div>

<div id="carouselControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://image.tmdb.org/t/p/original/mYiuvKCGAQ1gIxHhTKworJBnN2O.jpg" alt="Cinema, Aspirinas e Urubus, Marcelo Gomes">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://i0.wp.com/sitedosgeeks.com/wp-content/uploads/2019/05/unnamed-11.jpg" alt="O Céu de Suely, Karim Aïnouz">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://cdn-images.rtp.pt/EPG/imagens/34060_43368_57028.jpg" alt="O Som ao Redor, Kleber Mendonça Filho">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
